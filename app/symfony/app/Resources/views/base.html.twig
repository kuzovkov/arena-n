         {% endblock %}
        <title>{% block title %}Кинотеатр "Эрвий"{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{asset('bundles/cinemacinema/css/style.css?dfgdf=dfgdfgdf')}}"/>
            <link type="text/css" rel="stylesheet" href="{{asset('bundles/cinemacinema/js/fancybox/jquery.fancybox.css')}}"/>
        {% endblock %}
        {% block js_top%}
            <script src="{{asset('bundles/cinemacinema/js/jquery-1.11.0.min.js')}}"></script>
        	<script src="{{asset('bundles/cinemacinema/js/jquery.jcarousel.min.js')}}"></script>
        	<script src="{{asset('bundles/cinemacinema/js/jquery.stylish-select.min.js')}}"></script>
        	<script src="{{asset('bundles/cinemacinema/js/script.js?gdfgg=dfgdfgdsfgd')}}"></script>
            <script src="http://vkontakte.ru/js/api/openapi.js" type="text/javascript"></script>
            <script type="text/javascript" src="{{asset('bundles/cinemacinema/js/fancybox/jquery.fancybox.js')}}"></script>
            <script type="text/javascript" src="{{asset('bundles/cinemacinema/js/fancybox/jquery.fancybox.pack.js')}}"></script>
            <script type="text/javascript">
                    var s,i,x;
                    x=document.getElementsByTagName('link');
                    for(i=0;i<x.length;i++){x[i].href=x[i].href+'?'+new Date().getTime();}
            </script>
