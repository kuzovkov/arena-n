	<![endif]-->       
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
       
    </head>
    <body>
     
       {% block header %}
            {% include "CinemaCinemaBundle:Default:header.html.twig" %}    
       {% endblock %}
        
        {% block content %}
        
        {% endblock %}
        
       {% block footer %}
        {% include "CinemaCinemaBundle:Default:footer.html.twig" %}
       {% endblock %} 
        
        {% block javascripts %}
            {% if data.filmbackground is defined %}
            
            {% if data.filmbackground %}
            <script type="text/javascript">
                var PATH_TO_WALL = '../../../upload/images/film_wall/';
                var PATH_TO_NAME = '../../../upload/images/names/';
                var filename = PATH_TO_WALL + '{{data.filmbackground.getImageWallName}}';
                 
                var wrap = $('.wrap-main');
                var btnbuy = $('.wrp-btn-buy');
                var background = 'url("' + filename + '") center 0 no-repeat';
                wrap.css({'background':background,'min-height': '100%', 'width': '100%', 'min-width': '980px', 'background-attachment': 'fixed'});
                
                {% if data.filmnameimage is defined %}
                var namefilm = PATH_TO_NAME + '{{data.filmnameimage}}';
                var backgroundBtnBuy = 'url("'+ namefilm + '") center center no-repeat';
                btnbuy.css({'height':'298px', 'position':'relative', 'width':'960px', 'margin':'0 auto','background':backgroundBtnBuy});
                {% endif %}
            </script>
            {% endif %}
            
            {% endif %}
        {% endblock %}
    </body>
</html>
